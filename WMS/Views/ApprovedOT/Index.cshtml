@model IEnumerable<WMS.Models.ApprovedOT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p class="ErorrMessage">@ViewBag.Message</p>





<div class="col-lg-12">
    <div class="well bs-component">
        <form class="form-inline" action="~/ApprovedOT/SingleEmpEditOT" enctype="multipart/form-data" method="post">
            <fieldset>
                <legend>Approved OverTime (Detailed)</legend>
                     <div class="form-group">
                        <label>Company</label>

                         @Html.DropDownList("CompanyID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})

                    </div>
                
                <div class="form-group">
                    <label >From Date</label>
                    <input id="DateFrom" name="DateFrom" value="@ViewData["datef"]" type="date" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>To Date</label>
                    <input id="DateTo" name="DateTo" value="@ViewData["datet"]" type="date" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Emp No</label>
                    <input id="EmpNo" name="EmpNo" type="text" class="form-control" placeholder="EMP-00001"/>
                </div>
                <br />
                <br />
               <div class="col-md-12">
                <input type="submit" value="Next"  class="btn btn-sm btn-success pull-right"/>
                </div>
            </fieldset>
        </form>
    </div>
</div>




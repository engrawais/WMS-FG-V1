@model WMS.Models.EmailEntryForm

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.ID)
    <div class="form-horizontal col-md-12">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
           <div class="col-md-2">Email Address</div>
            <div class="col-md-10">
                 @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control" ,@style = "width: 900px;max-width: 900px;"  })
                @Html.ValidationMessageFor(model => model.EmailAddress)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">CC Address</div>
            <div class="col-md-10">
                 @Html.TextBoxFor(model => model.CCAddress, new { @class = "form-control",  @style = "width: 900px;max-width: 900px;"  })
                @Html.ValidationMessageFor(model => model.CCAddress)
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="@Url.Content("~/Scripts/EmailForm/EmailFormEdit.js")"></script>






















